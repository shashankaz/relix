{
  "family": "relix-task",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::051826712489:role/ecsTaskExecutionRole",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "containerDefinitions": [
    {
      "name": "relix-container",
      "image": "REPLACE_ME_BY_ACTION",
      "essential": true,
      "portMappings": [
        {
          "name": "relix-container-80-tcp",
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/relix-task",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
